<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_messenger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jonathan.cometogetherproject.MessengerActivity"
    tools:showIn="@layout/messenger_activity">



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/messenger_bar_3"
        android:id="@+id/contact_list" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:gravity="top|start"
        android:id="@+id/messenger_bar_3"
        >

        <Button
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/ic_new_message"
            android:onClick="newMessage"/>
        <android.support.v7.widget.ActionMenuView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/messenger_bar_2"/>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
